{
	"compilerOptions": {
		"outDir": "./lib/",
		"jsx": "react-jsx",
		"target": "es6", // Set to ES5 for older browser support.
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"noImplicitAny": true,
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"include": [ "src" ],
	"exclude": [ "node_modules" ]
}
